<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>

    <h3>Students List</h3>

    <form action="/search">
        <input type="search" name="name" placeholder="Search Name">
        <input type="search" name="number" placeholder="Search Roll Number">
        <input type="search" name="class" placeholder="Search Class">
        <input type="search" name="age" placeholder="Search Age">
        <input type="submit" value="Search">
    </form>

    <br>
    <br>
    <br>
    <br>
    <table width="100%" border="1px" style='text-align:center;'>
        <tr>
            <th>Roll Number</th>
            <th>Name</th>
            <th>Class</th>
            <th>Age</th>
            <th>Number</th>
        </tr>
        <% if(students.length > 0){ %>


            <% for(let i=0 ; i<students.length; i++){ %>

                <tr>
                    <td><%- students[i].Id %></td>
                    <td><%- students[i].name %></td>
                    <td><%- students[i].class %></td>
                    <td><%- students[i].age %></td>
                    <td><%- students[i].number %></td>

                </tr>

                <% } %>

                    <% }else{ %>


                        <tr>
                            <td>Not Found</td>
                            <td>Not Found</td>
                            <td>Not Found</td>
                            <td>Not Found</td>
                            <td>Not Found</td>
                        </tr>

                        <% } %>


    </table>
    <center>
        <a href="/">
            Add New Data
        </a>
    </center>
</body>

</html>